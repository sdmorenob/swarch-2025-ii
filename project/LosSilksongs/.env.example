# Application Configuration
ENVIRONMENT=development
DEBUG=true

# gRPC Server
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# Spotify API Credentials
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_MARKET=US

# Cache Configuration
# IMPORTANTE: Dejar REDIS_URL vac√≠o o sin configurar para usar in-memory cache
# Solo configura REDIS_URL si tienes Redis corriendo
REDIS_URL=
# REDIS_URL=redis://localhost:6379/0  # Descomenta SOLO si usas Redis
CACHE_ENABLED=true  # true = cache habilitado (in-memory por defecto)
CACHE_TTL=3600  # Tiempo de vida del cache en segundos

# Rate Limiting
SPOTIFY_REQUESTS_PER_SECOND=10
MAX_BATCH_SIZE=50
REQUEST_TIMEOUT=30

# Matching Configuration
FUZZY_MATCHING_THRESHOLD=0.8
TITLE_WEIGHT=0.5
ARTIST_WEIGHT=0.4
ALBUM_WEIGHT=0.1

# Retry Policy
MAX_RETRIES=3
RETRY_DELAY=1.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text  # text or json