{
  "id": null,
  "title": "TaskNotes - Database Metrics",
  "tags": ["tasknotes", "database"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
      {
        "id": 1,
        "title": "PostgreSQL - Database Sizes",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_database_size_bytes{database!=\"postgres\"}",
            "legendFormat": "{{database}} size"
          }
        ],
        "yAxes": [
          {"label": "Bytes", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "PostgreSQL - Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count{database!=\"postgres\"}",
            "legendFormat": "{{database}} connections"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "PostgreSQL - Cache Hit Ratio",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_blks_hit{database!=\"postgres\"} / (pg_stat_database_blks_hit{database!=\"postgres\"} + pg_stat_database_blks_read{database!=\"postgres\"}) * 100",
            "legendFormat": "{{database}} cache hit %"
          }
        ],
        "yAxes": [
          {"label": "Percentage", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "PostgreSQL - Transactions per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{database!=\"postgres\"}[5m]) + rate(pg_stat_database_xact_rollback{database!=\"postgres\"}[5m])",
            "legendFormat": "{{database}} TPS"
          }
        ],
        "yAxes": [
          {"label": "TPS", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "MongoDB - Operations per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mongodb_mongod_op_counters_total[5m])",
            "legendFormat": "{{database}} {{type}}"
          }
        ],
        "yAxes": [
          {"label": "Ops/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "MongoDB - Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "mongodb_mongod_connections",
            "legendFormat": "{{database}} connections"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "RabbitMQ - Queue Depth",
        "type": "graph",
        "targets": [
          {
            "expr": "rabbitmq_queue_messages_ready",
            "legendFormat": "{{queue}} ready"
          },
          {
            "expr": "rabbitmq_queue_messages_unacked",
            "legendFormat": "{{queue}} unacked"
          }
        ],
        "yAxes": [
          {"label": "Messages", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "RabbitMQ - Message Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rabbitmq_queue_messages_published_total[5m])",
            "legendFormat": "{{queue}} published/sec"
          },
          {
            "expr": "rate(rabbitmq_queue_messages_delivered_total[5m])",
            "legendFormat": "{{queue}} delivered/sec"
          }
        ],
        "yAxes": [
          {"label": "Messages/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}